<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F2F6"
    android:orientation="vertical"
    tools:context=".MainActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:orientation="vertical"
               android:background="#6047F8"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:drawableRight="@drawable/ic_search"
                   android:paddingRight="20dp"
                   android:textSize="14dp"
                   android:hint="Search Job"
                   android:paddingLeft="20dp"
                   android:layout_margin="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:background="@drawable/edittextdesing"/>
               <LinearLayout
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginBottom="20dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:weightSum="3">
                   <LinearLayout
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
                       android:background="@drawable/containerheader"
                       android:gravity="center"
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_margin="7dp"
                           android:layout_width="16dp"
                           android:layout_height="16dp"
                           android:src="@drawable/ic_location"/>
                       <TextView
                           android:textSize="16sp"
                           android:layout_margin="7dp"
                           android:layout_marginLeft="10dp"
                           android:textColor="@color/white"
                           android:text="Filter"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                       </TextView>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
                       android:background="@drawable/containerheader"
                       android:gravity="center"
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_margin="7dp"
                           android:layout_width="16dp"
                           android:layout_height="16dp"
                           android:src="@drawable/ic_location"/>
                       <TextView
                           android:textSize="16sp"
                           android:layout_margin="7dp"
                           android:layout_marginLeft="10dp"
                           android:textColor="@color/white"
                           android:text="Location"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                       </TextView>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_marginRight="10dp"
                       android:background="@drawable/containerheader"
                       android:gravity="center"
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_margin="7dp"
                           android:layout_width="16dp"
                           android:layout_height="16dp"
                           android:src="@drawable/ic_dashboard"/>
                       <TextView
                           android:textSize="16sp"
                           android:layout_margin="7dp"
                           android:layout_marginLeft="10dp"
                           android:textColor="@color/white"
                           android:text="Category"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                       </TextView>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>
           <TextView
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="5dp"
               android:textSize="24dp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Recent Jobs"/>
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="5dp"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:clickable="true"
                   android:background="?attr/selectableItemBackground"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="2">
                   <LinearLayout
                       android:layout_margin="10dp"
                       android:background="@drawable/edittextdesing"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_margin="10dp"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/google"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_marginTop="10dp"
                       android:layout_marginBottom="10dp"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textSize="14dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Google, New York"/>
                       <TextView
                           android:textSize="18dp"
                           android:textColor="@color/black"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Sr. UI Designer"/>
                       <TextView
                           android:textColor="#7A8194"
                           android:textSize="14dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="$45k-60k/yr"/>
                   </LinearLayout>
                   <LinearLayout
                       android:gravity="center_horizontal|center"
                       android:layout_margin="10dp"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_bookmark"/>
                       <TextView
                           android:textAlignment="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="8 days"/>
                   </LinearLayout>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="5dp"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:clickable="true"
                   android:background="?attr/selectableItemBackground"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="2">
                   <LinearLayout
                       android:layout_margin="10dp"
                       android:background="@drawable/edittextdesing"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_margin="10dp"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/airbnb"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_marginTop="10dp"
                       android:layout_marginBottom="10dp"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textSize="14dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Airbnb, Remote"/>
                       <TextView
                           android:textSize="18dp"
                           android:textColor="@color/black"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Sr. UI Designer"/>
                       <TextView
                           android:textColor="#7A8194"
                           android:textSize="14dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="$30k-45k/yr"/>
                   </LinearLayout>
                   <LinearLayout
                       android:gravity="center_horizontal|center"
                       android:layout_margin="10dp"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_bookmark"/>
                       <TextView
                           android:textAlignment="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="8 days"/>
                   </LinearLayout>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="20dp"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout

                   android:background="#FFFFFF"
                   android:orientation="vertical"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:scaleType="fitCenter"
                       android:adjustViewBounds="true"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@drawable/header"/>
                   <TextView
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:textSize="18dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Become an Applicant"/>
                   <TextView
                       android:layout_marginTop="3dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="When you fill in the registration form, you have mandatory field an optional fields. Mandatory fields will have a red asterisc"/>
                   <Button
                       android:textSize="16dp"
                       android:textStyle="bold"
                       android:background="@drawable/buttondesing"
                       android:textColor="#8473FA"
                       android:textAllCaps="false"
                       android:text="Sign Up"
                       android:layout_margin="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>
   </ScrollView>


    <com.luseen.spacenavigation.SpaceNavigationView
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:active_item_color="@color/black"
        app:centre_button_color="#8A40F4"
        app:inactive_centre_button_icon_color="@color/white"
        app:inactive_item_color="#CDCEE4"
        app:space_background_color="@color/white"
        app:centre_button_icon="@drawable/ic_add"
        app:space_item_icon_size="@dimen/space_item_icon_default_size"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />

</RelativeLayout>